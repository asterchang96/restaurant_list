
<div class="container mt-5">

<!-- search bar -->
  <div class="container search-bar">
    <div class="search-bar-outer">
      <div class="search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <!-- search --->
          <div class="input-group">
            <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
              value="{{keyword}}" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
          <!-- search category --->
          <div id="category-group">
            {{#each category}}
            <a href="/search?keyword={{this}}"class="badge badge-pill badge-warning font-weight-normal">{{this}}</a>
            {{/each}}
          </div>
        </form>
      </div>
    </div>
  </div>

<!-- restaurant list -->
  <div class="container mt-4">
    {{#if search_result}}
    <div id="search_result"><p>搜尋到 {{restaurants.length}} 間相符合的餐廳</p></div>
    {{/if}}
    <div class="row">
      <div class="col-md-10 col-12 mx-auto">
        <div class="card-columns">
          <!-- restaurant -->
          {{#each restaurants}}
        
          <div class="card mb-3">

            <a href="/restaurants/{{this._id}}" class="text-secondary">
            <img class="card-img-top" src="{{this.image}}"
              alt="{{this.name}}">

            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>
        
              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>
        
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span> 
            </div>
            </a>

            <div class="card-footer">
              
              <a class="btn" id="restaurant_edit" href="./restaurants/{{this._id}}/edit">edit</a>
              <a class="btn" id="restaurant_delete" href="./restaurants/{{this._id}}/delete">delete</a>
            </div>   

          </div>
      
        {{/each}}
        </div>
      </div>
    </div>
  </div>
  {{!-- new --}}
  <a href="./restaurants/new">
    <button id="addButton" class="btn btn-warning font-weight-bold text-white rounded-circle"
      style="font-size: 26px; width: 60px; height: 60px; position: fixed; right: 3%; bottom: 8%;"><i
        class="fas fa-plus"></i></button>
  </a>
</div>